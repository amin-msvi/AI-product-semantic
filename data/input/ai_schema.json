    "description": "string (max 500 chars)",
    "price": "float (>0)",
    "availability": "enum[in_stock, out_of_stock)"
  },
  "optional_fields": {
    "brand": "string",
    "category": "normalized string",
    "gtin": "string",
    "image_link": "url"
